<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.username %></td>
        <td><%= author.email %></td>
        <td><%= link_to 'Show', author , class: "btn"%></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_author_path(author), class: "btn" %></td>
          <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<br>
<br>
<% if logged_in? %>
  <%= link_to 'New Author', new_author_path, class: "btn" %>
<% end %>
