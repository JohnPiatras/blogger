<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @author.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @author.email %>
</p>

<h2>Articles by <%= @author.username %> </h2>
<% @author.articles.each do |article| %>
    <%= render partial: 'articles/article_summary', locals: { article: article } %>
<% end %>
<% if logged_in? %>
  <%= link_to 'Edit', edit_author_path(@author), class: "btn" %>
<% end %>
<%= link_to 'Back', authors_path, class: "btn" %>
