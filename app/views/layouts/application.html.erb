<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= auto_discovery_link_tag :rss, articles_url(:format => :rss) %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to root_path, class: "glowing-link" do %>
            <h1>Blogger</h1>
        <% end %>
        <div class="align-right">
          <% if logged_in? %>    
            <%= "Logged in as #{current_user.email}" %>
            <%= link_to "Logout", logout_path, class: "btn" %>
          <% else %>
            <%= link_to login_path, class: "btn" do %>
              Login
            <% end %>
          <% end %>
        </div>
      </nav>
    </header>
    <p class="flash"><%= flash.notice %></p> 
    <div class="container-row">
      <%= render partial: 'layouts/sidebar' %>
      
      <div id="content">
        <%= yield %>
      </div>
    </div>

    <footer>
      <%= link_to rss_feed_path, class: "glowing-link" do %>
        RSS Feed
      <% end %>
    </footer>
  </body>
</html>
