    <%= link_to article_path(article) do %>
      <div class="article-summary">
        <h3><%= article.title %></h3>
        <p><%= article.body[0, 100] + "..." %></p>

        <% date_str = article.created_at.strftime("%B #{article.created_at.day.ordinalize} %Y")     %>

        <p>Date published: <%= date_str %>, <%= article.comments.length %> comments, <%= article.view_count %> views</p> 
      
          <% article.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag), class: "tag" %>
          <% end %>
      </div>
    <% end %> 