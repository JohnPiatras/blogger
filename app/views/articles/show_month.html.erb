

<div class="container">
  <% if @articles.count == 0 %>
    <h1>No articles found in <%= @month %></h1>
  <% elsif %>
    <h1>Articles published in <%= @month %></h1>
  <% end %>
  
  <% @articles.each do |article| %>
    <%= render partial: 'articles/article_summary', locals: { article: article } %>
  <% end %>


  <% if logged_in? %>
    <br>
    <hr>
    <br>
    <%= link_to "Create a New Article", new_article_path, class: "btn" %>
  <% end %>
</div>